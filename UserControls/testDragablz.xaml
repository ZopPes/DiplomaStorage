<Window x:Class="DiplomaStorage.UserControls.testDragablz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomaStorage.UserControls"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:MUC="clr-namespace:DiplomaStorage.UserControls"
        
        mc:Ignorable="d"
        Title="testDragablz" Height="450" Width="800">
    <dragablz:TabablzControl x:Name="TabCon">
        <TabControl.Resources>
            <DataTemplate DataType="{x:Type MUC:TabDiploma}">
                <MUC:MagicTabControl DataContext="{Binding }" />
            </DataTemplate>
        </TabControl.Resources>
        <TabControl.ItemTemplate>
            <DataTemplate DataType="{x:Type MUC:Tab}">
                <StackPanel Orientation="Horizontal">

                    <TextBlock>
                                 <Run Text="{Binding name}" />
                                  <Hyperlink Command="{Binding CloseCommand}">X</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </DataTemplate>
        </TabControl.ItemTemplate>
    </dragablz:TabablzControl>
</Window>
