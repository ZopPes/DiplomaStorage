<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DiplomaStorage"
             xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="DiplomaStorage.App"
             StartupUri="MainWindow.xaml"
    xmlns:emoji="http://schemas.microsoft.com/netfx/2009/xaml/presentation">
    <Application.Resources>
        <Style x:Key="WinButton" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="35" />
            <Setter Property="Height" Value="25" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="ExtraBlack" />
        </Style>
        <emoji:Style x:Key="EmojeText" TargetType="emoji:TextBlock">
            <emoji:Setter Property="Text" Value="📚" />
            <emoji:Setter Property="FontSize" Value="92" />
            <emoji:Setter Property="IsHitTestVisible" Value="False" />
            <emoji:Setter Property="HorizontalAlignment" Value="Center" />
        </emoji:Style>
    </Application.Resources>
</Application>