<Window x:Name="window" x:Class="DiplomaStorage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomaStorage"
        mc:Ignorable="d"
        xmlns:MUC="clr-namespace:DiplomaStorage.UserControls"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        xmlns:Data="clr-namespace:Model;assembly=Model"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        Height="450" Width="800">
    <Window.DataContext>
        <local:MainVievModel />
    </Window.DataContext>
    <Window.Resources>
        <CollectionViewSource x:Key="cvsTabs" Source="{Binding Path=DiplomaTabs}" />
    </Window.Resources>
    <Grid x:Name="grid">
        <Grid IsEnabled="{Binding EnableMain}">
            <Grid.Effect>
                <BlurEffect Radius="{Binding BlurEffect}" />
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Menu>
                <MenuItem
                    Header="добавить группу"
                        Command="{Binding VisibleGroup}">
                </MenuItem>
                <MenuItem
                    Header="добавить студента"
                    Command="{ Binding VisibleStudent}"
                    CommandParameter="" />
                <MenuItem
                    Header="добавить преподователя"
                    Command="{ Binding VisibleTeacher}"
                    CommandParameter="" />
                <MenuItem
                   Header="добавить диплом"
                   Command="{Binding VisibleDiploma}" />
            </Menu>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="205*" />
                    <ColumnDefinition Width="125*" />
                    <ColumnDefinition Width="462*" />
                </Grid.ColumnDefinitions>

                <TreeView x:Name="treeView" ItemsSource="{Binding Groups}">
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <TreeViewItem Header="{Binding k, Mode=OneWay}">
                                <ListBox
                                ItemsSource="{Binding G}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding Fnumber}"
                                                    Command="{Binding DataContext.AddTab, ElementName=grid, Mode=OneWay}"
                                                    CommandParameter="{Binding}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </TreeViewItem>
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                <TabControl Grid.Column="1" Grid.ColumnSpan="2" >
                    <TabControl.ItemsSource>
                        <CompositeCollection>
                            <TabItem Header="Все дипломы">
                                <ListBox ItemsSource="{Binding ViewDiploms}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Student.Group.Fnumber}" HorizontalAlignment="Center" />
                                                    <emoji:TextBlock  Style="{Binding Mode=OneWay, Source={StaticResource EmojeText}}" />
                                                </StackPanel>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="{Binding Student}" />
                                                    <TextBlock
                                                    Grid.Row="1" Text="{Binding comment}"
                                                    MaxWidth="177"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center" />

                                                    <Button Grid.Row="2" Content="открыть"
                                                Command="{Binding DataContext.OpenDiploma, ElementName=grid}"
                                                CommandParameter="{Binding}" />
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid>
                                            </UniformGrid>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                </ListBox>
                            </TabItem>
                            <CollectionContainer Collection="{Binding Mode=OneWay, Source={StaticResource cvsTabs}}" />
                        </CompositeCollection>
                    </TabControl.ItemsSource>
                    <TabControl.Resources>
                        <DataTemplate DataType="{x:Type MUC:TabDiploma}">
                            <MUC:MagicTabControl DataContext="{Binding }" />
                        </DataTemplate>
                    </TabControl.Resources>
                    <TabControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type MUC:Tab}">
                            <StackPanel Orientation="Horizontal">

                                <TextBlock>
                                 <Run Text="{Binding name}" />
                                  <Hyperlink Command="{Binding CloseCommand}">X</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                </TabControl>
            </Grid>
        </Grid>

        <Grid Visibility="{Binding AddGroupVisible}" Background="#FFE4D6D6" Width="450" Height="275">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Content="X" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding CloseAddGroup}" />
            <Label Content="номер группы (3 символа)*" Grid.Row="1" />
            <TextBox Grid.Column="1"
                                 Grid.Row="1"
                     Text="{Binding NewGroup.number}" />

            <Label Content="выберите дату*" Grid.Row="3" />
            <DatePicker  SelectedDate="{Binding NewGroup.FDate}" Grid.Row="3" Grid.Column="2" />

            <Label Content="название группы"
                   Grid.Row="8" />
            <TextBox Grid.Row="8"  Grid.Column="1" Text="{Binding NewGroup.name}" />

            <Button Margin="0,8,0,0"
                                Content="добавить"
                                Grid.ColumnSpan="2"
                                Grid.Row="9"
                    Command="{Binding AddGroup}" />
        </Grid>
        <Grid Visibility="{Binding AddDiplomaVisible}" Background="#FFE4D6D6" Width="650" Height="275">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="AUTO" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="AUTO" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Content="X" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding CloseAddDiploma}" />
            <Label Content="выберите студента*" Grid.Row="1" />
            <ComboBox Grid.Column="1"
                                 Grid.Row="1"
                      ItemsSource="{Binding Students}"
                      SelectedValuePath="id"
                      SelectedValue="{Binding NewDiploma.Sudent_id}" />

            <Label Content="выберите проверяющего*"  Grid.Row="2" />
            <ComboBox Grid.Row="2"  Grid.Column="1"
                      ItemsSource="{Binding Teacher}"
                      SelectedValuePath="id"
                      SelectedValue="{Binding NewDiploma.Teacher_id}" />

            <Label Content="выберите дату*" Grid.Row="3" />
            <DatePicker  SelectedDate="{Binding NewDiploma.date}" Grid.Row="3" Grid.Column="2" />

            <Label Content="выберите архив с данными к диплому*"
                   Grid.Row="4" />
            <Grid Grid.Row="4"  Grid.Column="1"
                  AllowDrop="True"
                  DragDrop.Drop="DropDadaDiloma"
                  DragDrop.DragEnter="DragEnterDadaDiloma">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="35" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="DiplomaDatatext" Text="перенесите или выберите фаил" />
                <Button Grid.Column="1" Command="{Binding AddDiplomaData}" Content="..." />
            </Grid>

            <Label Content="выберите документ с дипломом*"
                   Grid.Row="5" />
            <Grid Grid.Row="5"  Grid.Column="1"
                  AllowDrop="True"
                  DragDrop.Drop="DropDocumentationDiloma"
                  DragDrop.DragEnter="DragEnterWordDiloma">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="35" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="DiplomaDocumentationtext" Text="перенесите или выберите фаил" />
                <Button Grid.Column="1" Command="{Binding AddDiplomaDocumentation}" Content="..." />
            </Grid>

            <Label Content="выберите документ с анотацией"
                   Grid.Row="6" />
            <Grid Grid.Row="6"  Grid.Column="1"
                  AllowDrop="True"
                  DragDrop.Drop="DropAnnotationDiloma"
                  DragDrop.DragEnter="DragEnterWordDiloma">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="35" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="DiplomaAnnotationtext" Text="перенесите или выберите фаил" />
                <Button Grid.Column="1" Command="{Binding AddDiplomaAnnotation}" Content="..." />
            </Grid>

            <Label Content="выберите документ с ведомостью"
                   Grid.Row="7" />
            <Grid Grid.Row="7"  Grid.Column="1"
                  AllowDrop="True"
                  DragDrop.Drop="DropStatementDiloma"
                  DragDrop.DragEnter="DragEnterWordDiloma">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="35" />
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="DiplomaStatementtext" Text="перенесите или выберите фаил" />
                <Button Command="{Binding AddDiplomaStatement}" Grid.Column="1" Content="..." />
            </Grid>

            <Label Content="ваш комментарий к диплому"
                   Grid.Row="8" />
            <TextBox Grid.Row="8"  Grid.Column="1" Text="{Binding NewDiploma.comment}" />

            <Button Margin="0,8,0,0"
                                Content="добавить"
                                Grid.ColumnSpan="2"
                                Grid.Row="9"
                    Command="{Binding AddDiploma}" />
        </Grid>
        <Grid Visibility="{Binding AddStudentVisible}" Background="#FFE4D6D6" Width="300" Height="250">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button Content="X" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding CloseAddStudent}" />
            <Label Grid.Row="1" Content="фамилия*" />
            <TextBox Grid.Column="1" Grid.Row="1"
                                  Text="{Binding NewStudent.Pioples.lastname, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="имя*"  Grid.Row="2" />

            <TextBox Grid.Row="2" Text="{Binding NewStudent.Pioples.name,UpdateSourceTrigger=PropertyChanged}"  Grid.Column="1" />
            <Label Content="отчество*" Grid.Row="3" />
            <TextBox  Grid.Row="3" Text="{ Binding NewStudent.Pioples.patronymic,UpdateSourceTrigger=PropertyChanged}"  Grid.Column="2" />
            <Label Content="выберите группу*" Grid.Row="4" />
            <ComboBox  Grid.Row="4" Grid.Column="2"
                       ItemsSource="{Binding DataContext.Group}"
                       SelectedItem="{Binding NewStudent.Group}"
                       DisplayMemberPath="Fnumber" />
            <Button Margin="0,10,0,0"
                                Content="добавить"
                                Grid.ColumnSpan="2"
                                Grid.Row="5"
                                Command="{Binding AddStudent}" />
        </Grid>
        <Grid Visibility="{Binding AddTeacherVisible}" Background="#FFE4D6D6" Width="300" Height="250">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button Content="X" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding CloseAddTeacher}" />
            <Label Grid.Row="1" Content="фамилия*" />
            <TextBox Grid.Column="1" Grid.Row="1"
                                  Text="{Binding NewTeacher.Pioples.lastname, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="имя*"  Grid.Row="2" />

            <TextBox Grid.Row="2" Text="{Binding NewTeacher.Pioples.name,UpdateSourceTrigger=PropertyChanged}"  Grid.Column="1" />
            <Label Content="отчество*" Grid.Row="3" />
            <TextBox  Grid.Row="3" Text="{ Binding NewTeacher.Pioples.patronymic,UpdateSourceTrigger=PropertyChanged}"  Grid.Column="2" />
            <Label Content="выберите группу*" Grid.Row="4" />
            <Button Margin="0,10,0,0"
                                Content="добавить"
                                Grid.Row="5"
                                Grid.ColumnSpan="2"
                                Command="{Binding AddTeacher}" />
        </Grid>
    </Grid>
</Window>